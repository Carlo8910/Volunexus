                <div class="progress-bar-fill bg-gray-500" style="width: {{progress}}%"></div>
              </div>
              <p class="text-xs text-gray-500 mt-1">{{progress}}% Complete</p>
            </div>
          </div>
        {{/each}}
      {{/if}}
    {{else}}
