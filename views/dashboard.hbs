<div class="bg-white rounded-lg shadow-md p-6 mb-6">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-800">Welcome, {{name}}!</h1>
      <p class="text-gray-600">You have {{points}} points</p>
    </div>
    {{#if (eq role "organization")}}
      <a href="/opportunities/add" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mt-4 md:mt-0">
        Add Opportunity
      </a>
    {{/if}}
  </div>
</div>

<div class="bg-white rounded-lg shadow-md p-6">
  <h2 class="text-xl font-bold text-gray-800 mb-4">
    {{#if (eq role "organization")}}
      Your Created Opportunities
    {{else}}
      Your Registered Opportunities
    {{/if}}
  </h2>

  {{#if opportunities}}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {{#each opportunities}}
        <div class="border rounded-lg overflow-hidden">
          <div class="p-4 bg-green-50">
            <h3 class="text-lg font-semibold text-gray-800">{{title}}</h3>
            <p class="text-sm text-gray-600">{{formatDate dateTime "MMM DD, YYYY - h:mm A"}}</p>
          </div>
          <div class="p-4">
            <p class="text-gray-700 mb-4 truncate">{{description}}</p>
            <div class="flex items-center justify-between">
              <span class="inline-block bg-green-100 text-green-800 text-xs px-2 py-1 rounded">
                {{tag}}
              </span>
              <a href="/opportunities/{{_id}}" class="text-green-600 hover:text-green-700">
                View Details
              </a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="text-gray-600">
      {{#if (eq role "organization")}}
        You haven't created any opportunities yet.
      {{else}}
        You haven't registered for any opportunities yet.
      {{/if}}
    </p>
  {{/if}}
</div> 