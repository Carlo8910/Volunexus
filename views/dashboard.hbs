          <span class="inline-block bg-{{mapCategoryColor tag}}-900 text-{{mapCategoryColor tag}}-300 text-xs px-3 py-1 rounded-lg border border-{{mapCategoryColor tag}}-600">
            <i class="{{mapCategoryIcon tag}} mr-1"></i> {{uppercase tag}}
          </span>
        </div>
