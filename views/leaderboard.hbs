<div class="bg-white rounded-lg shadow-md p-6">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Volunteer Leaderboard</h1>
  
  <div class="mb-6">
    <div class="flex flex-wrap space-x-2">
      <a href="/leaderboard?period=all" class="px-4 py-2 mb-2 rounded {{#if (eq period 'all')}}bg-green-600 text-white{{else}}bg-gray-200 text-gray-800 hover:bg-gray-300{{/if}}">
        All Time
      </a>
      <a href="/leaderboard?period=week" class="px-4 py-2 mb-2 rounded {{#if (eq period 'week')}}bg-green-600 text-white{{else}}bg-gray-200 text-gray-800 hover:bg-gray-300{{/if}}">
        This Week
      </a>
      <a href="/leaderboard?period=month" class="px-4 py-2 mb-2 rounded {{#if (eq period 'month')}}bg-green-600 text-white{{else}}bg-gray-200 text-gray-800 hover:bg-gray-300{{/if}}">
        This Month
      </a>
      <a href="/leaderboard?period=year" class="px-4 py-2 mb-2 rounded {{#if (eq period 'year')}}bg-green-600 text-white{{else}}bg-gray-200 text-gray-800 hover:bg-gray-300{{/if}}">
        This Year
      </a>
    </div>
  </div>
  
  {{#if users}}
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Rank
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Volunteer
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Points
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {{#each users}}
            <tr class="{{#if (eq ../user.id _id)}}bg-green-50{{/if}}">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                {{addOne @index}}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                {{name}}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <span class="font-semibold text-green-600">{{points}}</span> points
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <div class="text-center py-8">
      <p class="text-gray-600">No volunteers with points for this time period.</p>
    </div>
  {{/if}}
</div> 