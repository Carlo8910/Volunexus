<div class="bg-white rounded-lg shadow-md p-6 mb-6">
  <h1 class="text-2xl font-bold text-gray-800 mb-4">Volunteer Opportunities Map</h1>
  
  <div id="map-data" style="display: none;">{{{ opportunities }}}</div>

  <div class="flex flex-col md:flex-row mb-6">
    <div class="w-full md:w-1/3 pr-0 md:pr-4 mb-4 md:mb-0">
      <div class="mb-4">
        <label for="address-search-input" class="block text-sm font-medium text-gray-700 mb-1">Search Title/Desc/Location</label>
        <input type="text" id="address-search-input" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Search or enter address...">
      </div>
      
      <div class="mb-4">
        <label for="tag-filter" class="block text-sm font-medium text-gray-700 mb-1">Filter by tag</label>
        <select id="tag-filter" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
          <option value="">All Tags</option>
          <option value="healthcare">Healthcare</option>
          <option value="education">Education</option>
          <option value="environment">Environment</option>
          <option value="community">Community</option>
          <option value="animals">Animals</option>
          <option value="other">Other</option>
        </select>
      </div>
      
      <button id="address-search-button" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        <i class="fas fa-map-marker-alt mr-2"></i>Center Map on Address
      </button>

      <div class="mt-4">
        <label for="search-term" class="block text-sm font-medium text-gray-700 mb-1">Filter by Keyword</label>
        <input type="text" id="search-term" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Filter title, description...">
      </div>
    </div>
    
    <div class="w-full md:w-2/3">
      <div id="map" class="w-full h-[60vh] rounded-lg border"></div>
    </div>
  </div>
  
  <div id="opportunity-details" class="hidden bg-green-50 p-4 rounded-lg">
    <!-- Opportunity details will be shown here -->
  </div>
</div> 