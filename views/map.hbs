<div class="game-card p-6 mb-6">
  <h1 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-300 to-blue-400 mb-4">Quest Discovery Map</h1>
  
  <div class="flex flex-col md:flex-row mb-6">
    <div class="w-full md:w-1/3 pr-0 md:pr-4 mb-4 md:mb-0">
      <div class="bg-gray-800 rounded-lg p-4 shadow-lg mb-4 border-2 border-indigo-700 pixel-border">
        <div class="mb-4">
          <label for="address" class="block text-sm font-medium text-blue-300 mb-1">SEARCH REALM</label>
          <input type="text" id="address" class="w-full px-4 py-2 bg-gray-700 border-2 border-indigo-600 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Enter an address">
        </div>
        
        <div class="mb-4">
          <label for="tag-filter" class="block text-sm font-medium text-blue-300 mb-1">QUEST TYPE</label>
          <select id="tag-filter" class="w-full px-4 py-2 bg-gray-700 border-2 border-indigo-600 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
            <option value="">All Quests</option>
            <option value="healthcare">Healing</option>
            <option value="education">Knowledge</option>
            <option value="environment">Nature</option>
            <option value="community">Community</option>
            <option value="animals">Animal</option>
            <option value="other">Misc</option>
          </select>
        </div>
        
        <button id="find-opportunities" class="w-full bg-gradient-to-r from-green-600 to-emerald-500 hover:from-green-700 hover:to-emerald-600 text-white font-bold py-2 px-4 rounded-lg shadow-lg transition-all flex items-center justify-center">
          <i class="fas fa-compass mr-2"></i> DISCOVER QUESTS
        </button>
      </div>
    </div>
    
    <div class="w-full md:w-2/3">
      <div id="map" class="w-full h-96 rounded-lg border-2 border-indigo-700 shadow-lg"></div>
    </div>
  </div>
  
  <div id="opportunity-details" class="hidden bg-gray-800 p-4 rounded-lg border-2 border-indigo-700 shadow-lg">
    <!-- Opportunity details will be shown here -->
  </div>
</div>

<script>
  // Map JavaScript will be in public/js/map.js
  document.addEventListener('DOMContentLoaded', function() {
    const opportunities = {{{json opportunities}}};
    const mapApiKey = '{{mapApiKey}}';
    
    // Initialize map (actual implementation in map.js)
    if (typeof initMap === 'function') {
      initMap(opportunities);
    }
  });
</script> 